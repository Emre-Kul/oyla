<form method="POST" action="/user/setting">
    <input type="hidden" value="account" name="settingType">
    <div class="form-group">
        <label for="oldpassword">Old Password</label>
        <input type="password" class="form-control" id="oldpassport" placeholder="Old Password">
    </div>
    <div class="form-group">
        <label for="newpassword">New Password</label>
        <input type="password" class="form-control" id="newpassport" placeholder="New Password">
    </div>
    <div class="form-group">
        <label for="renewpassword">New Password(Again)</label>
        <input type="password" class="form-control" id="renewpassword" placeholder="New Password Again">
    </div>
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>