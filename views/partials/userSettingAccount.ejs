<form method="POST" action="/user/setting">
    <input type="hidden" value="account" name="settingType">
    <div class="form-group">
        <label for="oldpassword">Old Password</label>
        <input type="password" class="form-control" id="oldpassword" name="oldpassword" placeholder="Old Password" required="required">
    </div>
    <div class="form-group">
        <label for="newpassword">New Password</label>
        <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="New Password" required="required">
    </div>
    <div class="form-group">
        <label for="renewpassword">New Password(Again)</label>
        <input type="password" class="form-control" id="renewpassword" name="renewpassword" placeholder="New Password Again" required="required">
    </div>
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>