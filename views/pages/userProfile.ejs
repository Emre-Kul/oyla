<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
    <title>Oyla</title>
</head>

<body>
    <% console.log(session);var page = 'profile' %>
    <% include ../partials/header.ejs %>
    
    <main role="main" class="container">
        <form method="POST">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Username : </label>
                <div class="col-sm-10"> 
                    <p class="form-control-static">
                        <%= session.username %>
                    </p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email : </label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        <%= session.email %>
                    </p>
                </div>
            </div>
            <div class="form-group row">
                <label for="fullname" class="col-sm-2 col-form-label">Full Name : </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="fullname" name="fullname"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="income" class="col-sm-2 col-form-label">Income : </label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="income" name="income"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="sexselect" class="col-sm-2 col-form-label">Sex :</label>
                <div class="col-sm-10">
                    <select id="sexselect" class="form-control">
                        <option>Unspecified</option>
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="degreeselect" class="col-sm-2 col-form-label">Degree :</label>
                <div class="col-sm-10">
                    <select id="degreeselect" class="form-control">
                        <option>Unspecified</option>
                        <option>Bachelor</option>
                        <option>Master</option>
                        <option>Doctoral</option>
                    </select>
                </div>
            </div>
            <div class="from-group">
                <button type="submit" class="btn btn-primary btn-block" id="submit" name="user-profile-submit">Save Changes</button>
            </div>
    </main>
    
    <% include ../partials/footer.ejs %>

</body>

</html>