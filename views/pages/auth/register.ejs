<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head.ejs %>
    <title>Register | Oyla</title>
</head>

<body>
    <% include ../../partials/header.ejs %>

    <main role="main" class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card text-center">
                    <div class="card-header">
                        Register
                    </div>
                    <div class="card-body">
                        <% if(typeof isError !== 'undefined') { %>
                            <% if(typeof samePassword !== 'undefined') { %>
                                <% var strong="Passwords " %>
                                <% var msg="are not same !" %>                                
                            <% } else if(typeof passwordLength !== 'undefined') { %>
                                <% var strong="Password " %>
                                <% var msg="must be between 4 and 10" %>
                            <% } else if(typeof usernameValid !== 'undefined') { %>
                                <% var strong="Username " %>
                                <% var msg="has been already taken !" %>
                            <% } else if(typeof emailValid !== 'undefined') { %>
                                <% var strong="Email " %>
                                <% var msg="has been already taken !" %>
                            <% } %>                                
                            <div class="alert alert-danger" role="alert">
                                <strong><%= strong %></strong><%= msg %>
                            </div>
                        <% } %>
                        <form method="POST">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="username" 
                                       name="username" 
                                       placeholder="Username" 
                                       required="required"
                                       maxlength="50"/> 
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" 
                                       class="form-control" 
                                       id="email" 
                                       name="email" 
                                       placeholder="Email" 
                                       required="required"
                                       maxlength="50"/>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" 
                                       id="password" 
                                       name="password" 
                                       class="form-control" 
                                       required="required" 
                                       maxlength="50"/>
                            </div>
                            <div class="form-group">
                                <label for="re-password">Re-Password</label>
                                <input type="password" 
                                       id="repassword" 
                                       name="repassword" 
                                       class="form-control" 
                                       required="required" 
                                       maxlength="50"/>
                            </div>
                            <div class="from-group">
                                <button type="submit" class="btn btn-primary btn-block" id="submit" >Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main> 

    <% include ../../partials/footer.ejs %>
    
    <!-- SPECIAL SCRIPTS -->
    <script src="/js/authControl.js"></script>
    
</body>

</html>