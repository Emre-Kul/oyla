<!DOCTYPE html>
<html lang="en">

    <head>
        <% include ../../partials/head.ejs %>
        <title>Oyla</title>
    </head>

    <body>
        
        <% include ../../partials/header.ejs %>
        
        <main role="main" class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div class="container">
                        <% include ../../partials/searchBar.ejs %>
                         <%  for(survey of surveys){ %>
                        <div class="card mb-4">
                            <div class="card-header bg-dark text-white"><%= survey.title %></div>
                            <div class="card-body bg-primary text-white"><%= survey.description %></div>
                            <div class="card-footer">
                                <span>Created At : <%= survey.created_at %></span>
                                <span>Updated At : <%= survey.updated_at %></span>
                            </div>
                        </div>
                        <% } %>
                        <% include ../../partials/paginationBar.ejs %>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header">
                            Featured
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Hello, <%= session.username %></h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <% include ../../partials/footer.ejs %>

    </body>

</html>