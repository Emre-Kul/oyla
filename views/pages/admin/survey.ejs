<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head.ejs %>
    <title>Oyla</title>
</head>

<body>
    <% include ../../partials/header.ejs %>
    <main role="main" class="container">
         <div class="row">
            <% include ../../partials/adminSideBar.ejs %>
            <div class="col col-9">
                 <% include ../../partials/searchBar.ejs %>
                <h1>Surveys</h1>
                <table class="table table-inverse">
                    <thead>
                        <tr>
                        <th>#</th>
                        <th>Survey Name</th>
                        <th>Survey Creator</th>
                        <th>Survey Desc</th>
                        <th>--------</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%  let i,survey;
                            for(i = 0;i < surveys.length;i++){
                            survey = surveys[i];
                        %>
                        <tr>
                            <th scope="row"><%= pagination.pageStart+i+1 %></th>
                            <td><%= survey.title %></td>
                            <td><a href="/user/profile/<%= survey.User.username %>"><%= survey.User.username %></a></td>
                            <td><%= survey.description %></td>
                            <td>
                                <a href="/admin/survey/delete/<%= survey.id %>" onclick="return confirm('Are you sure?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <% include ../../partials/paginationBar.ejs %>
            </div>
        </div>
        
    </main>
    <% include ../../partials/footer.ejs %>
</body>

</html>